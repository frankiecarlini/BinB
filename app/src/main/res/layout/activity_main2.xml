<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp" android:id="@+id/linearLayout3">
        <ImageButton
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/logo" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@android:color/background_dark"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentStart="true"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp">
        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/ic_hear"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tt"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:text="Test : 1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/to"
                android:text="Volume : crescente"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/to"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tf"
                android:text="Orecchio : Destro"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tf"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tt"
                android:text="Frequenza : 250 Hz"
                android:textSize="18sp"
                android:textStyle="bold" />


        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageButton
            android:id="@+id/play_button"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/ic_play2" />

        <ImageButton
            android:id="@+id/stop_button"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/ic_stop" />
    </LinearLayout>

</LinearLayout>

